<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_activity_view"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            tools:text="lutti" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bar_linear_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/website_linear_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/website_image_view"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_public_white_24dp" />

            <TextView
                android:id="@+id/website_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/website_image_view"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:text="Website"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fav_linear_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true">

            <ToggleButton
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:id="@+id/fav_togglebox"
                android:textOn=""
                android:textOff=""/>

            <TextView
                android:id="@+id/fav_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fav_togglebox"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:text="Favorite"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/call_linear_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/call_image_view"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_call_white_24dp" />

            <TextView
                android:id="@+id/call_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/call_image_view"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:text="Call"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/address_linear_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true">


        <ImageView
            android:id="@+id/address_image_view"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:src="@mipmap/address" />

        <TextView
            android:id="@+id/address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2C3E50"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:fontFamily="sans-serif-light"
            tools:text="address" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/call_linear_view_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true">

        <ImageView
            android:id="@+id/call_image_view_2"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:src="@mipmap/call" />

        <TextView
            android:id="@+id/call_text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2C3E50"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:fontFamily="sans-serif-light"
            tools:text="(123) 456 7890" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_linear_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <ImageView
            android:id="@+id/time_image_view"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:src="@mipmap/time" />

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2C3E50"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:fontFamily="sans-serif-light"
            tools:text="M-F 9am-6pm" />

    </LinearLayout>


</LinearLayout>